{
  "name": "sjavier-portfolio",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./.next",
    "predev": "npm run clean",
    "dev": "next dev -p 3030",
    "prebuild": "npm run clean",
    "build": "next build",
    "start": "next start",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "analyze": "BUNDLE_ANALYZE=true yarn build",
    "lint:format": "prettier --write .",
    "lint:lint": "eslint . --ext ts --ext tsx --ext js",
    "lint:type-check": "tsc --pretty --noEmit",
    "find:unused": "next-unused"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "babelMacros": {
    "twin": {
      "includeClassNames": true,
      "styled": {
        "import": "default",
        "from": "@emotion/styled"
      },
      "css": {
        "import": "css",
        "from": "@emotion/react"
      },
      "global": {
        "import": "Global",
        "from": "@emotion/react"
      }
    }
  },
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.4.0",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@headlessui/react": "^1.2.0",
    "@sendgrid/mail": "^7.4.4",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "0.4.0",
    "acorn": "^8.2.4",
    "gsap": "^3.6.1",
    "next": "^10.2.0",
    "next-themes": "^0.0.14",
    "next-translate": "^1.0.6",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-gsap": "^3.2.1",
    "react-hook-form": "^7.6.0",
    "react-icons": "^4.2.0",
    "react-portal": "^4.2.1",
    "styled-breakpoints": "^10.0.0"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.3.0",
    "@tailwindcss/jit": "^0.1.18",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.3.2",
    "@types/react": "17.0.5",
    "@types/react-dom": "17.0.5",
    "@types/react-portal": "^4.0.2",
    "@types/tailwindcss": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "autoprefixer": "10.2.5",
    "babel-jest": "^26.6.3",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-twin": "^1.0.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.4.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.3",
    "postcss": "^8.3.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.1.2",
    "twin.macro": "^2.4.1",
    "typescript": "4.2"
  }
}
