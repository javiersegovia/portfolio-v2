{
  "name": "sjavier-portfolio",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./.next",
    "predev": "npm run clean",
    "dev": "next dev",
    "prebuild": "npm run clean",
    "build": "next build",
    "start": "next start",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "analyze": "BUNDLE_ANALYZE=true yarn build",
    "lint:format": "prettier --write .",
    "lint:lint": "eslint . --ext ts --ext tsx --ext js",
    "lint:type-check": "tsc --pretty --noEmit",
    "find:unused": "next-unused"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run lint:type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint:lint",
      "yarn lint:format"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "babelMacros": {
    "twin": {
      "includeClassNames": true,
      "styled": {
        "import": "default",
        "from": "@emotion/styled"
      },
      "css": {
        "import": "css",
        "from": "@emotion/react"
      },
      "global": {
        "import": "Global",
        "from": "@emotion/react"
      }
    }
  },
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.1.5",
    "@emotion/server": "^11.0.0",
    "@emotion/styled": "^11.1.5",
    "@popperjs/core": "^2.9.1",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "0.4.0",
    "@types/react-portal": "^4.0.2",
    "acorn": "^8.1.0",
    "faker": "^5.5.1",
    "next": "10.1.2",
    "next-themes": "^0.0.14",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^6.15.5",
    "react-popper": "^2.2.5",
    "react-portal": "^4.2.1",
    "react-slick": "^0.28.1",
    "styled-breakpoints": "^10.0.0"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.2.0",
    "@next/bundle-analyzer": "^10.0.9",
    "@tailwindcss/jit": "^0.1.17",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "@types/react-slick": "^0.23.4",
    "@types/tailwindcss": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "autoprefixer": "10.2.5",
    "babel-jest": "^26.6.3",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "babel-plugin-macros": "^3.0.1",
    "babel-plugin-twin": "^1.0.2",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.2",
    "husky": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.8",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.0.4",
    "twin.macro": "^2.3.1",
    "typescript": "4.2"
  }
}
